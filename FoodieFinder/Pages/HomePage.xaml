                                    <Line X2="5"
                                          Stroke="#33363F"/>
                                </Border>
                            </HorizontalStackLayout>-->
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>